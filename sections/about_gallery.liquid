{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'about_gallery.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="about_gallery__in">
    <div class="about_gallery__list_in swiper">
      <div class="about_gallery__list swiper-wrapper">
        {% for block in section.blocks %}
        <div class="about_gallery__list_item swiper-slide">
          <div class="about_gallery__item">
            <img src="{{ block.settings.gallery_img | img_url: 'master' }}" alt="{{ section.block.settings.gallery_img.alt | escape }}" class="about_gallery__slider_img">
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-button-next about_gallery__controller"></div>
    <div class="swiper-button-prev about_gallery__controller"></div>
  </div>
</div>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>

<script>
  const swiper = new Swiper(".swiper", {
    slidesPerView: 1,
    spaceBetween: 24,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
      1367: {
        slidesPerView: 4,
      },
      },
  });
</script>

{% schema %}
{
"name": "About gallery section",
"tag": "section",
"class": "section about_gallery",
"blocks": [
{
"type": "text",
"name": "Slider item",
"settings": [
{
"type": "image_picker",
"id": "gallery_img",
"label": "Add image for item"
}
]
}
]
}

{% endschema %}