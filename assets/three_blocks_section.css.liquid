.three_blocks__list {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: stretch;
  align-content: center;

  margin: 0 -25px -25px 0;
  padding: 0;

  list-style: none;
}

.three_blocks__list_item {
  padding: 0 25px 25px 0;

  list-style: none;
}


@media (min-width: 1460px) {
  .three_blocks__list_item {
    width: 33.33%;
  }
}


@media (min-width: 1024px) and (max-width: 1459px) {
  .three_blocks__list_item {
    width: 50%;
  }
}


@media (max-width: 1023px) {
  .three_blocks__list_item {
    width: 100%;
  }
}



.three_blocks_item {
  position: relative;

  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
  align-content: center;

  width: 100%;
  height: 100%;
  border-radius: 5px;

  overflow: hidden;
}

.three_blocks_item::before {
	z-index: 1;

	position: absolute;
	left: 0;
	bottom: 0;

	content: '';

	width: 100%;
	/* height: 100%; */

	pointer-events: none;

  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
	background-image: url({{ 'item_decor.svg' | asset_url }});
}

@media (min-width: 768px) {
  .three_blocks_item {
    padding: 40px 34px;
    min-height: 335px;
  }
  .three_blocks_item::before {
    height: 100%;
  }
}


@media (min-width: 481px) and (max-width: 767px) {
  .three_blocks_item::before {
    height: 70vw;
  }
  .three_blocks_item {
    min-height: 60vw;
  }
}

@media (max-width: 480px) {
  .three_blocks_item::before {
    height: 100vw;
  }
}


@media (max-width: 767px) {
  .three_blocks_item {
    padding: 40px 15px;
    min-height: 445px;
  }
}


.three_blocks_item.three_blocks_item--rewards_mod {
  background-color: #68a3db;
}

.three_blocks_item.three_blocks_item--social_mod {
  background-color: #8bc53f;
}

.three_blocks_item.three_blocks_item--sign_up_mod {
  background-color: #235833;
}

.three_blocks_item__in {
  z-index: 2;

  position: relative;

  width: 100%;
}

.three_blocks_item__in.three_blocks_item__in--wrap_mod {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}


@media (min-width: 768px) {
  .three_blocks_item__content_col {
    flex: 1 0 50%
  }
  .three_blocks_item__content_col:last-child {
    padding-left: 20px;
  }
}

@media (max-width: 767px) {
  .three_blocks_item__content_col {
    width: 100%;
  }
}


.three_blocks_item__img {
  width: 100%;
}

.three_blocks_item__img.three_blocks_item__img--size_mod {
  max-width: 174px;
  margin: 0 auto;
}

.three_blocks_item__img.three_blocks_item__img--mobile_mod {
  margin-top: 30px;
}


@media (max-width: 767px) {
  .three_blocks_item__img.three_blocks_item__img--desctop_mod {
    display: none;
  }
}

@media (min-width: 768px) {
  .three_blocks_item__img.three_blocks_item__img--mobile_mod {
    display: none;
  }
}


.three_blocks_item__img:not(:last-child) {
  margin-bottom: 20px;
}

.three_blocks_item__img_in {
  display: block;
  width: 100%;
  height: auto;
}

.three_blocks_item__rewards_descr {
  width: 100%;
  padding: 12px;

  font-family: 'PT Sans Narrow';
  font-weight: normal;
  color: #ffffff;
  font-size: 20px;
  line-height: calc(21 / 20);
  text-transform: uppercase;

  border-radius: 5px;
  background-color: #5e94c7;
}

.three_blocks_item__rewards_descr:not(:last-child) {
  margin-bottom: 42px;
}

.three_blocks_item__rewards_descr strong {
  font-weight: bold;
}

.three_blocks_item__rewards_descr p:not(:last-child) {
  margin-bottom: 10px;
}

.three_blocks_item__btns {
  width: 100%;
  margin: 0;
  padding: 0;

  list-style: none;
}

.three_blocks_item__btns_item {
  width: 100%;
}

.three_blocks_item__btns_item:not(:last-child) {
  margin-bottom: 10px;
}

.three_blocks_item__btn {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

  width: 100%;
  height: 42px;
  padding: 0 20px;

  font-family: 'Europa';
  text-decoration: none;
  color: #235833;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: -0.2px;
  line-height: 42px;
  text-align: center;

  border-radius: 4px;
  background-color: #ffffff;

  transition: opacity .3s ease;
  will-change: opacity;
}

.three_blocks_item__btn.three_blocks_item__btn--accent_mod {
  color: #ffffff;
  background-color: #235833;
}

.three_blocks_item__btn:hover,
.three_blocks_item__btn:focus {
  opacity: .8;
  text-decoration: none;
}

.three_blocks_item__content {
  width: 100%;
  text-align: center;
}

.three_blocks_item__title {
  width: 100%;

  font-family: 'PT Sans Narrow';
  font-weight: normal;
  color: #ffffff;
  font-size: 32px;
  letter-spacing: 0.89px;
  line-height: calc(38 / 32);
  text-transform: uppercase;
}

.three_blocks_item__title strong {
  font-weight: bold;
}

.three_blocks_item__title:not(:last-child) {
  margin-bottom: 14px;
}

.three_blocks_item__title.three_blocks_item__title--style_mod {
  font-family: 'Pacifico';
  text-shadow: 2px 3px 1px #274111;
  color: #eec83d;
  font-size: 52px;
  font-weight: normal;
  line-height: calc(38 / 52);
  text-align: center;
  text-transform: none;
  font-style: italic;
  margin-bottom: 30px;
}


.three_blocks_item__socials {
  width: 100%;

  margin: 0;
  padding: 0;

  list-style: none;
}

.three_blocks_item__socials:not(:last-child) {
  margin-bottom: 20px;
}

.three_blocks_item__socials_item {
  width: 100%;
}

.three_blocks_item__socials_item:not(:last-child) {
  margin-bottom: 8px;
}

.three_blocks_item__socials_link {
  display: inline-flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

  font-family: 'SemplicitaPro';
  text-decoration: none;
  color: #235833;
  font-size: 20px;
  font-weight: 600;
  line-height: .8;
}

.three_blocks_item__socials_icon {
  width: 36px;
  height: 36px;
  margin-right: 30px;
  padding: 10px;

  display: inline-flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

  border-radius: 50%;
  background-color: #ec1556;
}

.three_blocks_item__socials_icon_img {
  display: block;
  max-width: 100%;
  max-height: 100%;
}

.three_blocks_item__descr {
  width: 100%;

  font-family: 'SemplicitaPro';
  color: #ffffff;
  font-size: 20px;
  font-weight: 500;
  line-height: calc(26 / 20);
  text-align: center;
}

.three_blocks_item_subtitle {
  width: 100%;

  font-family: 'PT Sans Narrow';
  color: #ffffff;
  font-size: 26px;
  letter-spacing: 2.4px;
  line-height: calc(38 / 26);
  text-transform: uppercase;
}

.three_blocks_item_subtitle:not(:last-child) {
  margin-bottom: 10px;
}

.three_blocks_item__sign_list {
  width: 100%;

  margin: 0;
  padding: 0;

  list-style: none;
}

.three_blocks_item__sign_item {
  width: 100%;

  list-style: none;
}

.three_blocks_item__sign_item:not(:last-child) {
  margin-bottom: 20px;
}

.three_blocks_item__sign_link {
  position: relative;

  min-width: 136px;
  height: 42px;
  padding: 0 10px;

  display: inline-flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

  text-decoration: none;
  color: #ffffff;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: -0.2px;
  line-height: 42px;
  text-align: center;

  border-radius: 4px;
  background-color: #ec1556;

  overflow: hidden;
}

.three_blocks_item__sign_icon {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
}

.three_blocks_item__sign_icon_img {
  display: block;
  width: 100%;
  height: 100%;

  object-fit: cover;
}